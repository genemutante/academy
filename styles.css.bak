body {
  font-family: sans-serif;
  background: #f8fafc;
  margin: 0;
  padding: 1rem;
  color: #1f2937;
}

h1 {
  color: #0f172a;
  font-size: 1.5rem;
  margin-bottom: 1rem;
}

button {
  background: #2563eb;
  color: white;
  padding: 0.5rem 1rem;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  font-weight: bold;
}

button:hover {
  background: #1d4ed8;
}

select {
  padding: 0.5rem;
  font-size: 1rem;
  margin-right: 1rem;
}

#log {
  background: #f1f5f9;
  padding: 1rem;
  margin-top: 1.5rem;
  border-radius: 8px;
  font-family: monospace;
  font-size: 0.9rem;
  max-height: 500px;
  overflow-y: auto;
  white-space: pre-wrap;
  border-left: 4px solid #2563eb;
}
